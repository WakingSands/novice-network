@import "./colors.styl"
@import "./font.styl"

#app, .full-height
  height 100%

body, h1, h2, h3, h4, h5, #app .ui.menu
  font-family: 'FFXIV', Lato, Helvetica Neue, "Microsoft Yahei", "微软雅黑", Arial, Helvetica, sans-serif;

::-webkit-scrollbar-track
  -webkit-box-shadow inset 0 0 6px rgba(0,0,0,0.3)

::-webkit-scrollbar-thumb
  -webkit-border-radius 10px
  border-radius 10px
  background rgba(255, 255, 255, 0.4)
  -webkit-box-shadow inset 0 0 6px rgba(0,0,0,0.5)

::-webkit-scrollbar-thumb:window-inactive
	background rgba(255, 255, 255, 0.8)

.guide
  margin-bottom 1em
  &.cols2, &.cols3
    display flex
    justify-content center
    align-items center
    &.top-align
      align-items flex-start
    flex-wrap wrap
    img
      border-radius 8px
    .col
      margin 0 1em
    .col.grow
      flex 1
    .col.figcap
      display flex
      flex-direction column
      text-align center
      > p:first-child
        margin-bottom 0.2em
  &.cols2 .col.grow
    flex-basis 370px
  &.cols3 .col.grow
    flex-basis 250px

.center
  display flex
  justify-content center
  align-items center

@media screen and (max-width 425px)
  .md-table::before
    content '※ 左右滑动以浏览完整表格'
    position sticky
    left 0
    font-size 0.9em
    color #888
  .md-table
    font-size 0.9em
    width 100%
    overflow-x auto
    position relative
    table.ui.table
      width 100% /* 不锁了，手机需要超宽的直接HTML写宽度 */
      td
        max-width 75vw
